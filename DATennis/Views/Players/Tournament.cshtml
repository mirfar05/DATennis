@model DATennis.Models.Tournament

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h3>
                Tournament
            </h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-6">
                    <h3>
                        Group A
                    </h3>

                    @foreach (var player in Model.Groups[0].Players)
                    {
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.ActionLink(player.Name, "Details", new { id = player.Id })</h3>
                            </div>
                            <div class="panel-body">
                                <p>Rank: @player.Ranking</p>
                                <p>Country: @player.Country</p>
                            </div>
                        </div>
                    }
                </div>
                <div class="col-md-6">
                    <h3>
                        Group B
                    </h3>

                    @foreach (var player in Model.Groups[1].Players)
                    {
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">@Html.ActionLink(player.Name, "Details", new { id = player.Id })</h3>
                            </div>
                            <div class="panel-body">
                                <p>Rank: @player.Ranking</p>
                                <p>Country: @player.Country</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>